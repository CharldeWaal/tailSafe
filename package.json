{
    "name": "tailsafe",
    "version": "1.0.0",
    "description": "TypeScript-first utility for building Tailwind CSS classes with type safety and automatic compilation",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "exports": {
        ".": {
            "import": "./dist/index.js",
            "require": "./dist/index.js",
            "types": "./dist/index.d.ts"
        },
        "./babel": {
            "import": "./dist/babel/index.js",
            "require": "./dist/babel/index.js",
            "types": "./dist/babel/index.d.ts"
        },
        "./swc": {
            "import": "./dist/swc/index.js",
            "require": "./dist/swc/index.js",
            "types": "./dist/swc/index.d.ts"
        },
        "./provider": {
            "import": "./dist/provider/index.js",
            "require": "./dist/provider/index.js",
            "types": "./dist/provider/index.d.ts"
        },
        "./runtime": {
            "import": "./dist/runtime/index.js",
            "require": "./dist/runtime/index.js",
            "types": "./dist/runtime/index.d.ts"
        }
    },
    "files": [
        "dist",
        "README.md",
        "LICENSE"
    ],
    "scripts": {
        "build": "tsc",
        "dev": "tsc --watch",
        "clean": "rm -rf dist",
        "prepublishOnly": "npm run clean && npm run build",
        "test": "jest",
        "test:watch": "jest --watch",
        "lint": "eslint src --ext .ts,.tsx",
        "lint:fix": "eslint src --ext .ts,.tsx --fix",
        "type-check": "tsc --noEmit"
    },
    "keywords": [
        "tailwind",
        "css",
        "typescript",
        "react",
        "babel-plugin",
        "swc-plugin",
        "utility-first",
        "styling",
        "css-in-js",
        "type-safe"
    ],
    "author": "Charl de Waal",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/charldewaal/tailsafe.git"
    },
    "bugs": {
        "url": "https://github.com/charldewaal/tailsafe/issues"
    },
    "homepage": "https://github.com/charldewaal/tailsafe#readme",
    "peerDependencies": {
        "react": ">=16.8.0",
        "tailwindcss": ">=3.0.0"
    },
    "devDependencies": {
        "@types/react": "^18.0.0",
        "typescript": "^5.0.0"
    },
    "engines": {
        "node": ">=14.0.0"
    },
    "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
}